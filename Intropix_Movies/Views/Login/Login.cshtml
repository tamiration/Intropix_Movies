@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<form method="post" class="form-signin michal">
    <div class="form-group">
        <h1 class="h2 mb-3 font-weight-normal headline">Sign in</h1>
        <h1 class="h4 mb-3 font-weight-normal text-danger">@ViewData["LoginMessage"]</h1>
        <input id="username" name="username" type="text" class="form-control" placeholder="username" required autofocus />
        <input id="password" name="password" type="password" class="form-control" placeholder="password" required />
        <button asp-controller="Login"
                asp-action="LoginClicked"
                asp-route-username="username"
                asp-route-password="password"
                type="submit"
                class="btn btn-lg btn-primary btn-block">
            כניסה
        </button>
    </div>
    <div class="headline">
        <span>Dont have a user?</span> <a asp-area="" asp-controller="Signup" asp-action="Create" class="btn-link"> click to sign up</a>
    </div>
</form>
